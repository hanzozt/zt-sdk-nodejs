{
  "name": "@hanzozt/zt-sdk-nodejs",
  "description": "A NodeJS-based SDK for delivering secure applications over a Ziti Network",
  "version": "0.27.0",
  "main": "./lib/zt",
  "scripts": {
    "build": "npm run build:configure && npm run build:make",
    "build:configure": "run-script-os",
    "build:configure:windows": "configure",
    "build:configure:linux:darwin": "./configure",
    "build:make": "cmake-js build",
    "build:package": "node-pre-gyp package",
    "clean": "cmake-js clean",
    "test": "node --test --test-timeout=20000 tests/*.test.*js",
    "install": "node-pre-gyp install || npm run build",
    "docs": "jsdoc2md -t API_REFERENCE.hbs lib/*.js > API_REFERENCE.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hanzozt/zt-sdk-nodejs.git"
  },
  "binary": {
    "module_name": "zt_sdk_nodejs",
    "module_path": "./build/{configuration}/",
    "remote_path": "./hanzozt/zt-sdk-nodejs/releases/download/{version}/",
    "package_name": "{module_name}-v{version}-{node_abi}-{platform}-{arch}.tar.gz",
    "host": "https://github.com"
  },
  "license": "Apache-2.0",
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "keywords": [
    "zt",
    "nodejs"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "author": {
    "name": "Hanzo ZT",
    "url": "http://hanzozt.dev"
  },
  "devDependencies": {
    "cmake-js": "^8.0.0",
    "docdash": "^1.2.0",
    "jsdoc": "^4.0.4",
    "jsdoc-to-markdown": "^7.1.1",
    "run-script-os": "^1.1.6"
  },
  "dependencies": {
    "@mapbox/node-pre-gyp": "^2.0.3",
    "bindings": "^1.5.0"
  }
}
